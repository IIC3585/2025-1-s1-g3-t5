---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

import FiltroAutores from '../components/vue/FiltroAutores.vue';
import Chatbot from '../components/ChatbotIsland.svelte';

const autores = await getCollection("autores");

const items = autores;
---

<Layout title="Autores Chilenos">
  <h1 class="text-3xl font-bold mb-8 text-center">Personajes Chilenos</h1>

  <FiltroAutores client:load items={items} />
  <Chatbot client:load chatbotlink="https://www.chatbase.co/chatbot-iframe/_jdY3LCFZEdNxpzRIKCLL"/>

</Layout>
