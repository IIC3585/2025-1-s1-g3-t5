---
import type { CollectionEntry } from "astro:content";

type Props = {
  autor: CollectionEntry<"autores">;
};

const { autor } = Astro.props;
const { name, id, image } = autor.data;
---

<a href={`/autores/${id}`} class="block rounded-xl border shadow hover:shadow-lg transition overflow-hidden bg-white">
  <article class="flex flex-col items-center p-4 gap-4">
    {image && (
      <img src={image} alt={`Imagen de ${name}`} class="w-48 h-48 object-cover rounded-lg" />
    )}
    <h2 class="text-lg font-semibold text-center text-gray-800">{name}</h2>
  </article>
</a>
