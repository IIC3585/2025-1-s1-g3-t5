---
import '../styles/global.css';

const {
  title = "Autores Chilenos",
  description = "MiniWiki: Enciclopedia visual de autores chilenos",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="bg-white text-gray-800">
    <nav class="flex items-center justify-between px-6 py-4 shadow-md">
      <div class="text-2xl font-bold text-gray-900">MiniWiki</div>
      <div class="flex gap-6">
        <a href="/" class="text-blue-600 hover:underline text-lg font-medium">
          Personajes Chilenos
        </a>
        <a href="/aves" class="text-blue-600 hover:underline text-lg font-medium">
          Aves Nativas
        </a>
      </div>
    </nav>

    <main class="px-6 py-10 max-w-screen-xl mx-auto">
      <slot />
    </main>
  </body>
</html>
